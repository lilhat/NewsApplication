<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_nav_graph"
    app:startDestination="@id/recommendedFragment">

    <fragment
        android:id="@+id/recommendedFragment"
        android:name="com.example.newsapplication.ui.fragments.RecommendedFragment"
        android:label="RecommendedFragment" >
        <action
            android:id="@+id/action_recommendedFragment_to_articleFragment"
            app:destination="@id/articleFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_recommendedFragment_to_registerActivity"
            app:destination="@id/registerActivity"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_recommendedFragment_to_profileActivity"
            app:destination="@id/profileActivity"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_recommendedFragment_to_settingsActivity"
            app:destination="@id/settingsActivity" />
        <action
            android:id="@+id/action_recommendedFragment_to_logoutActivity"
            app:destination="@id/logoutActivity" />
    </fragment>
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.example.newsapplication.ui.fragments.FavouriteFragment"
        android:label="FavouriteFragment" >
        <action
            android:id="@+id/action_favouriteFragment_to_articleFragment"
            app:destination="@id/articleFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_favouriteFragment_to_registerActivity"
            app:destination="@id/registerActivity"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_favouriteFragment_to_profileActivity"
            app:destination="@id/profileActivity"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_favouriteFragment_to_settingsActivity"
            app:destination="@id/settingsActivity" />
        <action
            android:id="@+id/action_favouriteFragment_to_logoutActivity"
            app:destination="@id/logoutActivity" />
    </fragment>
    <fragment
        android:id="@+id/preferredFragment"
        android:name="com.example.newsapplication.ui.fragments.PreferredFragment"
        android:label="PreferredFragment" >
        <action
            android:id="@+id/action_preferredFragment_to_articleFragment"
            app:destination="@id/articleFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_preferredFragment_to_registerActivity"
            app:destination="@id/registerActivity"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_preferredFragment_to_profileActivity"
            app:destination="@id/profileActivity"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_preferredFragment_to_settingsActivity"
            app:destination="@id/settingsActivity" />
        <action
            android:id="@+id/action_preferredFragment_to_logoutActivity"
            app:destination="@id/logoutActivity" />
    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="com.example.newsapplication.ui.fragments.ArticleFragment"
        android:label="ArticleFragment" />
    <activity
        android:id="@+id/loginActivity"
        android:name="com.example.newsapplication.ui.LoginActivity"
        android:label="LoginActivity" />
    <activity
        android:id="@+id/registerActivity"
        android:name="com.example.newsapplication.ui.RegisterActivity"
        android:label="RegisterActivity" />
    <activity
        android:id="@+id/profileActivity"
        android:name="com.example.newsapplication.ui.ProfileActivity"
        android:label="ProfileActivity" />
    <activity
        android:id="@+id/settingsActivity"
        android:name="com.example.newsapplication.ui.SettingsActivity"
        android:label="SettingsActivity" />
    <activity
        android:id="@+id/logoutActivity"
        android:name="com.example.newsapplication.ui.LogoutActivity"
        android:label="LogoutActivity" />
</navigation>