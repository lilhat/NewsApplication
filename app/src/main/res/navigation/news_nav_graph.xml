<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_nav_graph"
    app:startDestination="@id/recommendedFragment">

    <fragment
        android:id="@+id/recommendedFragment"
        android:name="com.example.newsapplication.ui.fragments.RecommendedFragment"
        android:label="RecommendedFragment" >
        <action
            android:id="@+id/action_recommendedFragment_to_profileActivity"
            app:destination="@id/profileActivity"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_recommendedFragment_to_settingsActivity"
            app:destination="@id/settingsActivity"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_recommendedFragment_to_logoutActivity"
            app:destination="@id/logoutActivity"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_recommendedFragment_to_preferredFragment"
            app:destination="@id/preferredFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_recommendedFragment_to_favouriteFragment"
            app:destination="@id/favouriteFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_recommendedFragment_to_detailsActivity"
            app:destination="@id/detailsActivity"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
    </fragment>
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.example.newsapplication.ui.fragments.FavouriteFragment"
        android:label="FavouriteFragment" >
        <action
            android:id="@+id/action_favouriteFragment_to_profileActivity"
            app:destination="@id/profileActivity"
            app:enterAnim="@anim/fade_out"
            app:exitAnim="@anim/slide_out"
            app:popEnterAnim="@anim/slide_in"
            app:popExitAnim="@anim/fade_in"/>
        <action
            android:id="@+id/action_favouriteFragment_to_settingsActivity"
            app:destination="@id/settingsActivity"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_favouriteFragment_to_logoutActivity"
            app:destination="@id/logoutActivity"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_favouriteFragment_to_recommendedFragment"
            app:destination="@id/recommendedFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_favouriteFragment_to_preferredFragment"
            app:destination="@id/preferredFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_favouriteFragment_to_favouriteDetailsActivity"
            app:destination="@id/favouriteDetailsActivity"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
    </fragment>
    <fragment
        android:id="@+id/preferredFragment"
        android:name="com.example.newsapplication.ui.fragments.PreferredFragment"
        android:label="PreferredFragment" >
        <action
            android:id="@+id/action_preferredFragment_to_profileActivity"
            app:destination="@id/profileActivity"
            app:enterAnim="@anim/fade_out"
            app:exitAnim="@anim/slide_out"
            app:popEnterAnim="@anim/slide_in"
            app:popExitAnim="@anim/fade_in"/>
        <action
            android:id="@+id/action_preferredFragment_to_settingsActivity"
            app:destination="@id/settingsActivity"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_preferredFragment_to_logoutActivity"
            app:destination="@id/logoutActivity"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_preferredFragment_to_recommendedFragment"
            app:destination="@id/recommendedFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_preferredFragment_to_favouriteFragment"
            app:destination="@id/favouriteFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_preferredFragment_to_detailsActivity"
            app:destination="@id/detailsActivity"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
    </fragment>
    <activity
        android:id="@+id/profileActivity"
        android:name="com.example.newsapplication.ui.activities.ProfileActivity"
        android:label="ProfileActivity" />
    <activity
        android:id="@+id/settingsActivity"
        android:name="com.example.newsapplication.ui.activities.SettingsActivity"
        android:label="SettingsActivity" />
    <activity
        android:id="@+id/logoutActivity"
        android:name="com.example.newsapplication.ui.activities.LogoutActivity"
        android:label="LogoutActivity" />
    <activity
        android:id="@+id/detailsActivity"
        android:name="com.example.newsapplication.ui.activities.DetailsActivity"
        android:label="DetailsActivity" />
    <activity
        android:id="@+id/favouriteDetailsActivity"
        android:name="com.example.newsapplication.ui.activities.FavouriteDetailsActivity"
        android:label="FavouriteDetailsActivity" />
</navigation>