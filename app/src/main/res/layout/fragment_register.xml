<?xml version = "1.0" encoding = "utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent"
    tools:context = ".ui.MainActivity"
    android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".ui.MainActivity">



        <TextView
            android:id="@+id/registerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/default_register"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registerTitle"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="@color/dark_sky_blue"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/nameEntry"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@+id/newsLogo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="-1dp"
            android:focusable="true"
            android:hint="@string/hint_name" />

        <EditText
            android:id="@+id/emailEntry"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_below="@+id/nameEntry"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-1dp"
            android:focusable="true"
            android:hint="@string/hint_email" />

        <EditText
            android:id="@+id/passwordEntry"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_below="@+id/emailEntry"
            android:layout_alignEnd="@+id/emailEntry"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:hint="@string/hint_password"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/newsLogo"
            android:layout_width="129dp"
            android:layout_height="124dp"
            android:layout_below="@+id/registerTitle"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher_foreground" />


        <Button
            android:id="@+id/facebook_register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordEntry"
            android:layout_centerVertical="true"
            android:layout_marginTop="198dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="@string/facebook_register"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/google_register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facebook_register_btn"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-48dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="@string/google_register"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/terms_checkbox"
            android:layout_width="258dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="71dp"
            android:layout_marginTop="390dp"
            android:layout_marginEnd="50dp"
            android:text="@string/terms_conditions" />

        <CheckBox
            android:id="@+id/notification_checkbox"
            android:layout_width="258dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="71dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="190dp"
            android:text="@string/push_notifications" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="28dp"
            android:layout_toStartOf="@+id/registerTitle"
            android:backgroundTint="@color/pastel_orange"
            android:text="@string/default_register" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="41dp"
            android:layout_toEndOf="@+id/registerTitle"
            android:backgroundTint="@color/pastel_orange"
            android:text="@string/cancel_text" />



    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>